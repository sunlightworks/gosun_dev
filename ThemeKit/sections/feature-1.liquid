<section class="feature-section position-relative z-index-1 {% if full_width != blank %}width-100{% endif %} {{ background_color }} {% if show_pattern %} pattern-map {% endif %}" {% if dark_theme != blank %}data-theme="dark-1"{% endif %}>
  <div class="grid feature-grid">
    <div class=" flex items-center justify-center col-6@lg reveal-fx {% if invert != blank %} reveal-fx--translate-left  justify-start@lg order-2@lg {% else %} reveal-fx--translate-right justify-end@lg{% endif %}">
      <div class="padding-md padding-x-lg@lg padding-y-xxl@lg max-width-sm feature-content">
        {% if overline != blank %}
        <p class="opacity-70% text-uppercase margin-bottom-xxs">{{ overline }}</p>
        {% endif %}

        <div class="text-component feature-text">
        {% if title != blank %} <h1 class="{% if display_text != blank %} text-xxxxl@lg {% endif %}"> {{ title }}</h1> {% endif %}
        {% if description != blank %} <p class="text-md {% if display_text != blank %} text-lg@lg {% endif %}" >{{ description }}</p>{% endif %}
        </div>
    
        <div class="{% if description != blank %} margin-top-md {% else %}margin-top-lg{% endif %}">
          <div class="flex flex-wrap gap-sm items-center feature-btn-group">
              {% if button1 != blank %}
                  <a {% if button1_url != blank %}href="{{ button1_url }}"{% endif %} class="btn {% if btn_type != blank %} {{ btn_type }} {% endif %} btn--md">{{ button1 }}&nbsp;➞</a>
              {% endif %}
              {% if button2 != blank %}
                <a {% if button2_url != blank %}href="#"{% endif %} class="color-inherit">{{ button2 }}&nbsp;➞</a>
              {% endif %}
          </div> 
        </div>
      </div>
    </div>

    
    <div class="loop-slideshow slideshow slideshow--ratio-4:3 slideshow--transition-slide width-100% object-cover col-6@lg order-1@lg  js-loop-slideshow" data-autoplay-interval="5000" data-swipe="on">
      <p class="sr-only">Slideshow Items</p>
      
      <ul class="slideshow__content" data-custom-cursor="loop-slideshow-cursor-arrow" id="loop-slideshow-1">
        <li class="slideshow__item js-slideshow__item" style="background-image: url('{{ image_1 |  img_url: '800x' }}');">
          <p class='sr-only'>Slideshow item 1 description</p>
        </li>
        
        <li class="slideshow__item js-slideshow__item" style="background-image: url('{{ image_2 |  img_url: '800x' }}');">
          <p class='sr-only'>Slideshow item 2 description</p>
        </li>
        
        <li class="slideshow__item js-slideshow__item" style="background-image: url('{{ image_3 |  img_url: '800x' }}');">
          <p class='sr-only'>Slideshow item 3 description</p>
        </li>
      </ul>
    
